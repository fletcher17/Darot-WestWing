<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WestWingCampaign" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" >@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:fillViewport">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="O_MR1">shortEdges</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/ctransparent</item>
    </style>
</resources>